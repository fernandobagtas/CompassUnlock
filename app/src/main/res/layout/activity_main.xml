<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewCompass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:gravity="center"
        android:text="360.0"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/imageViewCompass"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/compass_min" />

    <Button
        android:id="@+id/button"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="138dp"
        android:layout_marginRight="138dp"
        android:layout_marginBottom="60dp"
        android:text="Unlock" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="158dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="236dp"
        android:layout_marginRight="236dp"
        android:layout_marginBottom="120dp"
        android:src="@drawable/house_white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewCompass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Point to location to unlock"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>